<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="@color/Scatteredclouds_day"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:gravity="center|top"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:gravity="center"
        android:layout_marginTop="30dp"
        android:layout_marginRight="140dp"
        android:textSize="20sp"
        android:fontFamily="@font/neue"
        android:textColor="@color/white"
        android:text="Scattered\n Clouds"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/Return"
        android:textSize="20sp"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="-35dp"
        android:fontFamily="@font/neue"
        android:textColor="@color/white"
        android:text="Return"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <View
        android:layout_marginTop="90dp"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:background="@drawable/circleshape"
        />
    <View
        android:layout_marginTop="-160dp"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:background="@drawable/sun"
        />
    <ImageView
        android:layout_marginTop="-60dp"
        android:layout_marginRight="70dp"
        android:src="@drawable/cloudnormal"
        android:layout_width="150dp"
        android:layout_height="100dp"/>
    <ImageView
        android:layout_marginLeft="80dp"
        android:layout_marginTop="-150dp"
        android:src="@drawable/cloudnormal"
        android:layout_width="150dp"
        android:layout_height="100dp"/>

    <TextView
        android:id="@+id/City"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="160dp"
        android:fontFamily="@font/neue"
        android:text="Bishkek"
        android:textColor="@color/white"
        android:textSize="18sp" />
    <TextView
        android:id="@+id/Temperature"
        android:layout_marginTop="20dp"
        android:textSize="64sp"
        android:fontFamily="@font/neue"
        android:textColor="@color/white"
        android:text="24°"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="100dp">
        <LinearLayout
            android:gravity="center"
            android:layout_marginRight="10dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="18sp"
                android:id="@+id/FL"
                android:fontFamily="@font/neue"
                android:textColor="@color/white"
                android:text=" feels like - 24°"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textSize="18sp"
                android:id="@+id/WS"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/neue"
                android:textColor="@color/white"
                android:text="wind speed - 4.3m/s"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:layout_marginLeft="15dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="18sp"
                android:id="@+id/Humidity"
                android:fontFamily="@font/neue"
                android:textColor="@color/white"
                android:text="humidity - 0%"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textSize="18sp"
                android:id="@+id/Pressure"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/neue"
                android:textColor="@color/white"
                android:text="pressure - 986hhGm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>